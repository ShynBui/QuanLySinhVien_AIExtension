<!-- CSS -->

    body {
        background-color: #f2f2f2;
    }

    .card {
        border-radius: 20px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
    }

    .profile-image-pic {
        border: 5px solid #fff;
    }

    .form-control:focus {
        border-color: #e68a00;
        box-shadow: none;
    }

    .btn-color {
        background-color: #e68a00;
        border-color: #e68a00;
    }

    .btn-color:hover {
        background-color: #d17100;
        border-color: #d17100;
    }

    .text-color {
        color: #e68a00;
    }

.card-body{
display: flex;
    justify-content: space-around;
    flex-direction: column;
    align-items: center;
    height: 516px;
    margin-top:50px
}
.user-box {
  position: relative;
}
.user-box input {
  width: 100%;
  padding: 10px 0;
  font-size: 16px;
  color: #fff;
  margin-bottom: 30px;
  border: none;
  border-bottom: 1px solid #fff;
  outline: none;
  background: transparent;
}
.user-box label {
  position: absolute;
  top:0px;
  left: 0;
  padding: 10px 0;
  font-size: 16px;
  color: #fff;
  pointer-events: none;
  transition: .5s;
}
.user-box input:focus ~ label {
  top: -20px;
  left: 0;
  color: #03e9f4;
  font-size: 12px;
}
.user-box input:valid ~ label {
  top: -20px;
  left: 0;
  color: #03e9f4;
  font-size: 12px;
}

